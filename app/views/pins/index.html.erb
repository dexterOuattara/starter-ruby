<p id="notice"><%= notice %></p>
<div class="container">
  <%= render 'layouts/header' %>

  <%= render 'layouts/categories' %>

  <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic">Title of a longer featured blog post</h1>
      <p class="lead my-3">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
      <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">Continue reading...</a></p>
    </div>
  </div>

  <div class="row">

    <% @pins.each do |pin| %>

      <div class="col-md-4">
        <div class="card card-img-top">
          <%= link_to image_tag(pin.image, style: 'height:200px' ) , pin %>
          <div class="card-body">
            <div class="mb-1 text-danger"><%= pin.created_at.to_s(:short) %> <strong class="d-inline-block mb-2 text-white btn btn-primary"><%= pin.user %></strong></div>

            <h5 class="card-title"><%= pin.title %></h5>
            <p class="card-text"><%=truncate( sanitize pin.caption, :length => 100)  %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted"><%= pin.created_at %></small>
          </div>
        </div>
      </div>

    <% end %>

  </div>

