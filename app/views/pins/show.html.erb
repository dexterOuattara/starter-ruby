<div class="container">
  <%= render 'layouts/header' %>

  <%= render 'layouts/categories' %>

</div>

<div class="container">
  <div class="row">

    <div class="col-12 text-center">
      <p class="text-center" style="text-align: center"><%= @pin.created_at.to_s(:short) %></p>
      <p class="text-center" style="text-align: center"><%= @pin.title %></p>
      <div class="col-12 text-center">
        <%= image_tag(@pin.image) if @pin.image.attached? %>
      </div>

      <div class="col-12 text-left">
        <p class="card-text mb-auto text-left"> <%= sanitize  @pin.caption %></p>
      </div>

    </div>

  </div>

</div>



<% if current_user && current_user.admin %>
  <%= link_to 'Edit', edit_pin_path(@pin) %> |
  <%= link_to 'Back', pins_path %>
<% end %>

