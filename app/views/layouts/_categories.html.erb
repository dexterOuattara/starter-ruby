<!-- Categories Widget -->
<div class="card my-4">
  <h5 class="card-header">Categories</h5>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <ul class="list-unstyled mb-0">
            <% @categories.each do |category| %>
              <li>

                <%= link_to category.name, posts_path(:cate => category.id)  %>
              </li>

            <% end %>


        </ul>
      </div>
    </div>
  </div>
</div>