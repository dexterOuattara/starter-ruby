<!-- Categories Widget -->
<div class="card my-4">
  <h5 class="card-header">Categories</h5>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <ul class="list-unstyled mb-0">
          <% @latestposts.each do |latestpost| %>
            <li>
              <a href="#"><%= latestpost.category.name %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>