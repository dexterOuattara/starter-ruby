<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">


      <!-- Blog Post -->

      <% @posts.each do |post| %>

    <div class="card mb-4">
      <%= link_to image_tag(post.image,  alt: "Edit Entry", class:"card-img-top" ) , post %>
        <div class="card-body">
          <h2 class="card-title"><%= post.title %>
            <strong class="d-inline-block mb-2 text-white btn btn-primary"><%= post.category.name %></strong></h2>
          <p class="card-text"><%=truncate( sanitize post.caption, :length => 100)  %></p>
          <a href="#" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
          <%= post.created_at.to_s(:short) %>
          <a href="#"> <%= post.user.surname %>  <%= post.user.name %></a>
        </div>
      </div>
      <% end %>



      <!-- Pagination -->
      <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
<!--          <a class="page-link" href="#">&larr; <%#= will_paginate @posts %></a>-->
        </li>

      </ul>


    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

      <!-- Search Widget -->
      <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
          <div class="input-group">
            <%= form_tag(posts_path, method: :get) do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", name:nil, class:"btn btn-primary" %>
          <% end %>
          </div>
        </div>
      </div>

      <!-- Categories Widget -->
      <%= render 'layouts/categories' %>

